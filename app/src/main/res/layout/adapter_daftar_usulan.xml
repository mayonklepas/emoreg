<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/llcmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/frame"
            android:orientation="horizontal"
            android:padding="1dp">

            <TextView
                android:id="@+id/headernama"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:text="Nama Komponen"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/bdetail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bdetail"
                style="@style/Custombutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_48dp"
                android:tint="#ffffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignEnd="@+id/bdetail"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bdetail"
        android:layout_gravity="center"
        android:background="#f1f1f1" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardexpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/llc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="2">

                <TableRow>

                    <TextView
                        android:text="ID"
                        android:textSize="12sp" />

                    <TextView
                        android:text=" : "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/id"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Judul Peraturan"
                        android:textSize="12sp" />

                    <TextView
                        android:text=" : "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/judul_peraturan"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Unit Kerja"
                        android:textSize="12sp" />

                    <TextView
                        android:text=" : "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/nama_unit_kerja"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Tanggal Pengajuan"
                        android:textSize="12sp" />

                    <TextView android:text=" : " />

                    <TextView
                        android:id="@+id/tanggal_pengajuan"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="No. Peraturan"
                        android:textSize="12sp" />

                    <TextView
                        android:text=" : "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/nomor_peraturan"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Tanggal_Pembaruan"
                        android:textSize="12sp" />

                    <TextView
                        android:text=" : "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tanggal_pembaruan"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Status"
                        android:textSize="12sp" />

                    <TextView
                        android:text=" : "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/nama_status"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Persentase Selesai"
                        android:textSize="12sp" />

                    <TextView
                        android:text=" : "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/persen_selesai"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="12sp" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/boperasi"
                    style="@style/Custombutton2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:text="OPERASI"
                    android:textColor="#fff" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>