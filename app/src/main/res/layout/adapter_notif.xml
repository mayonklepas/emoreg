<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/frame"
            android:padding="10dp"
            android:id="@+id/llcmain"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/headernama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/bdetail"
                android:layout_toStartOf="@+id/bdetail"
                android:gravity="center_vertical"
                android:text="judul"
                android:textColor="@color/teks"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/bdetail"
                style="@style/Custombutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_48dp"
                android:tint="#ffffff" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:id="@+id/cardexpand">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="10dp"
            android:id="@+id/llc"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tanggal"
                android:text="tanggal"
                android:layout_marginBottom="5dp"
                android:textColor="@color/teks"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/judul"
                android:text="judul"
                android:layout_marginBottom="10dp"
                android:textColor="@color/teks"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pesan"
                android:text="pesan"
                android:textColor="@color/teks"
                android:textSize="12sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>